<?xml version="1.0" encoding="utf-8" ?>
<controls:ChatServiceConfigControlBase
    x:Class="RodelAgent.UI.Controls.Startup.ChatClientConfigSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:RodelAgent.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:RodelAgent.UI.Extensions"
    xmlns:local="using:RodelAgent.UI.Controls.Startup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <PasswordBox
            x:Name="KeyBox"
            HorizontalAlignment="Stretch"
            AutomationProperties.Name="{x:Bind CustomHeaderText, Mode=OneWay}"
            Header="{x:Bind CustomHeaderText, Mode=OneWay}"
            HeaderTemplate="{StaticResource InputHeaderTemplate}"
            PasswordChanged="OnKeyBoxPasswordChanged" />
    </StackPanel>
</controls:ChatServiceConfigControlBase>
