<?xml version="1.0" encoding="utf-8" ?>
<base:WindowBase
    x:Class="RodelAgent.UI.Forms.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Richasy.WinUI.Share.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RodelAgent.UI.Forms"
    xmlns:main="using:RodelAgent.UI.Controls.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  标题栏  -->
        <main:AppTitleBar x:Name="AppTitleBar" Grid.ColumnSpan="2" />

        <!--  导航栏  -->
        <main:NavigationPanel Grid.Row="1" />

        <Frame
            x:Name="MainFrame"
            Grid.Row="1"
            Grid.Column="1"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            CornerRadius="8,0,0,0"
            Loaded="OnFrameLoaded"
            Unloaded="OnFrameUnloaded" />

        <Grid
            x:Name="TipContainer"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Visibility="Collapsed" />
    </Grid>
</base:WindowBase>
