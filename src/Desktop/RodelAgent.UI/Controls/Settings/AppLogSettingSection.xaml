<?xml version="1.0" encoding="utf-8" ?>
<local:SettingSectionBase
    x:Class="RodelAgent.UI.Controls.Settings.AppLogSettingSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Richasy.WinUI.Share.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:RodelAgent.UI.Extensions"
    xmlns:ic="using:FluentIcons.WinUI"
    xmlns:local="using:RodelAgent.UI.Controls.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <base:SettingsCard
        ActionIconToolTip="{ext:Locale Name=OpenLogFolder}"
        Click="OnItemClickAsync"
        Description="{ext:Locale Name=AppLogDescription}"
        Header="{ext:Locale Name=AppLog}"
        IsClickEnabled="True">
        <base:SettingsCard.HeaderIcon>
            <ic:SymbolIcon Symbol="DocumentBulletList" />
        </base:SettingsCard.HeaderIcon>
    </base:SettingsCard>
</local:SettingSectionBase>
