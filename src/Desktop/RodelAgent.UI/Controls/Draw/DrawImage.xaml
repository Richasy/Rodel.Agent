<?xml version="1.0" encoding="utf-8" ?>
<base:LayoutUserControlBase
    x:Class="RodelAgent.UI.Controls.Draw.DrawImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Richasy.WinUIKernel.Share.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RodelAgent.UI.Controls.Draw"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    CornerRadius="{StaticResource ControlCornerRadius}"
    mc:Ignorable="d">

    <Grid CornerRadius="{StaticResource ControlCornerRadius}">
        <Image
            x:Name="LocalImage"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Stretch="{x:Bind Stretch, Mode=OneWay}" />
    </Grid>
</base:LayoutUserControlBase>
